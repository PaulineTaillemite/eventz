<section class="event">
  <div class="summary">
    <h1> <%= @event.name %></h1>
    <span class="price">
      <%= price(@event)%>
    </span>
    <h3><%= day_and_time(@event)%> in <%= @event.location %></h3>
    <p><%= @event.description %></p>

  </div>
</section>

<section class="admin">
<%= link_to "Edit", edit_event_path(@event), class:"button" %>
<%= link_to "Delete", event_path(@event), class:"button", data: {turbo_method: :delete, turbo_confirm: "Really?!"} %>
</section>