<section class="event">

  <div class="image">
  <%= image_tag @event.image_file_name %>

  <% if current_user %>
    <div class="likes">
     <% if @like %>
     <%= button_to "☆ Unlike", event_like_path(@event, @like), method: :delete  %>
    <% else %>
      <%= button_to "★ Like", event_likes_path(@event) %>
    <% end %>
      <div class="count"> 
      <%= @likers.size %>
      </div>
    </div>
  <% end %>

  </div>

  <div class="summary">
    <h1> <%= @event.name %></h1>
    <span class="price">
      <%= price(@event)%>
    </span>
    <h3> <%= pluralize(@event.capacity,"spot")%> &bull; <%= day_and_time(@event)%> in <%= @event.location %></h3>
    <p><%= @event.description %></p>

    <div class="register">
    <%= register_or_sold_out(@event)%>
      <p>
      <%= link_to "Who's registered?", event_registrations_path(@event) %>
      </p>
    </div>
  </div>
  <aside>
    <% if @likers.present? %>
      <h4>Liked by</h4>
        <ul>
          <% @likers.each do |user| %>
            <li>
             <%= link_to user.name, user %>
            </li>
          <% end %>
        </ul>
    <% end %>
  </aside>
</section>

<% if current_user_admin? %>
  <section class="admin">
  <%= link_to "Edit", edit_event_path(@event), class:"button" %>
  <%= link_to "Delete", event_path(@event), class:"button", data: {turbo_method: :delete, turbo_confirm: "Really?!"} %>
  </section>
<% end %>