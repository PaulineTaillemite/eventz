<div class="event">
  <div class="summary">
    <h2>Editing <%= @event.name %></h2>
  </div>

  <%= form_with(model: @event, class: "event-form") do |f| %>
    <div class="form-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-field">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>

    <div class="form-field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div class="form-field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div class="form-field">
      <%= f.label :starts_at %>
      <%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime-select"} %>
    </div>

    <%= f.submit "Update my Event", class: "submit-button" %>
  <% end %>
</div>
